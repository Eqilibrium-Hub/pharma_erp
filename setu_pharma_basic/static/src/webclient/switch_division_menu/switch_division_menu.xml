<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="setu_pharma_basic.SwitchDivisionMenu" owl="1">
    <Dropdown class="o_switch_division_menu" position="'bottom-end'">
        <t t-set-slot="toggler">
            <span t-attf-class="{{env.isSmall ? 'fa fa-building-o' : 'oe_topbar_name'}}">
                <t t-if="!env.isSmall"><t t-esc="currentDivision.name"/></t>
            </span>
        </t>
        <t t-foreach="Object.values(divisionService.availableDivisions).sort((c1, c2) => c1.id - c2.id)" t-as="division">
            <t t-call="setu_pharma_basic.SwitchDivisionItem">
                <t t-set="division" t-value="division"/>
            </t>
        </t>
    </Dropdown>
</t>

<t t-name="setu_pharma_basic.SwitchDivisionItem" owl="1">
    <DropdownItem class="p-0 bg-white">
        <t t-set="isDivisionSelected" t-value="selectedDivisions.includes(division.id)"/>
        <t t-set="isCurrent" t-value="division.id === divisionService.currentDivision.id"/>
        <div class="d-flex" data-menu="division" t-att-data-division-id="division.id">
            <div
                role="menuitemcheckbox"
                t-att-aria-checked="isDivisionSelected"
                t-att-aria-label="division.name"
                t-att-title="(isDivisionSelected ? 'Hide ' : 'Show ') + division.name + ' content.'"
                tabindex="0"
                class="border-right toggle_division o_py"
                t-attf-class="{{isCurrent ? 'border-primary' : ''}}"
                t-on-click.stop="toggleDivision(division.id)">

                <span class="btn btn-light border-0 p-2">
                    <i class="fa fa-fw py-2" t-att-class="isDivisionSelected ? 'fa-check-square text-primary' : 'fa-square-o'"/>
                </span>
            </div>

            <div
                role="button"
                t-att-aria-pressed="isCurrent"
                t-att-aria-label="'Switch to ' + division.name "
                t-att-title="'Switch to ' + division.name "
                tabindex="0"
                class="d-flex flex-grow-1 align-items-center py-0 log_into pl-2 o_py"
                t-att-class="isCurrent ? 'alert-primary ml-1 mr-2' : 'btn btn-light font-weight-normal border-0'"
                t-on-click="logIntoDivision(division.id)">

                <span
                    class='division_label pr-3'
                    t-att-class="isCurrent ? 'text-900 font-weight-bold' : 'ml-1'">
                    <t t-esc="division.name"/>
                </span>
            </div>
        </div>
    </DropdownItem>
</t>
</templates>