<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_setu_pharma_stockist_tree" model="ir.ui.view">
        <field name="name">view.setu.pharma.stockist.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="replace">
                <tree string="Contacts">
                    <field name="name"/>
                    <field name="degree_tag_ids" widget="many2many_tags"/>
                    <field name="speciality_tag_id" optional="hide"/>
                    <field name="area_id"/>
                    <field name="city_id"/>
                    <field name="code" optional="hide"/>
                    <field name="doctor_class" optional="hide"/>
                    <field name="birth_date" optional="hide"/>
                    <field name="anniversary_date" optional="hide"/>
                    <field name="monthly_visit" optional="hide"/>
                    <field name="product_ids" widget="many2many_tag"/>
                    <field name="state" decoration-success="state == 'approved'"
                           decoration-info="state == 'draft'" decoration-danger="state == 'cancel'" widget="badge"/>
                    <field name="division_ids" widget="many2many_tags" optional="hide"/>
                    <field name="chemist_ids" widget="many2many_tags" optional="hide"/>
                </tree>
            </xpath>
        </field>
    </record>

    <record id="setu_pharma_stockist_kanban" model="ir.ui.view">
        <field name="name">setu.pharma.stockist.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <div class="class=o_kanban_image_fill_left o_kanban_image_full">
                                    <div>
                                        <div class="o_kanban_image">
                                            <field name="image_1920" widget='image'/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <strong class="o_kanban_record_title" style="margin-left: 4px;">
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li style="margin-left: 28px; line-height:0.7em;">
                                        <field name="degree_tag_ids"/>
                                        <span style="font-size: 12px;">
                                            <field name="mobile"/>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="setu_pharma_stockist_action_window">
        <field name="name">Stockist</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_stockist','=',True)]</field>
        <field name="context">{'default_is_stockist':True}</field>
    </record>

    <record model="ir.actions.act_window.view" id="setu_pharma_stockist_action_window_tree">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_setu_pharma_stockist_tree"/>
        <field name="act_window_id" ref="setu_pharma_stockist_action_window"/>
    </record>

    <record model="ir.actions.act_window.view" id="setu_pharma_stockist_action_window_kanban">
        <field name="sequence" eval="1"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="setu_pharma_stockist_kanban"/>
        <field name="act_window_id" ref="setu_pharma_stockist_action_window"/>
    </record>

    <record model="ir.actions.act_window.view" id="setu_pharma_stockist_action_window_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="setu_pharma_doctor_form"/>
        <field name="act_window_id" ref="setu_pharma_stockist_action_window"/>
    </record>



</odoo>
