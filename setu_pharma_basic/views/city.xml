<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="setu_pharma_city_list">
        <field name="name">setu_pharma_city list</field>
        <field name="model">setu.pharma.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="setu_pharma_city_form">
        <field name="name">setu_pharma_city form</field>
        <field name="model">setu.pharma.city</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="state_id" domain="[('country_id', '=', country_id)]" required="1"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="country_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_pharma_city_kanban" model="ir.ui.view">
        <field name="name">setu.pharma.city.kanban</field>
        <field name="model">setu.pharma.city</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <div class="o_kanban_record_headings">
                                    <b class="o_kanban_record_title">City :</b>
                                    <span>
                                        <field name="name"/>
                                    </span>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <b class="o_kanban_record_title">Code :</b>
                                    <span>
                                        <field name="code"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="setu_pharma_city_search" model="ir.ui.view">
        <field name="name">setu.pharma.city.search</field>
        <field name="model">setu.pharma.city</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
                <group string="Group By">
                    <filter string="State" name="group_state" context="{'group_by':'state_id'}"/>
                </group>
                <filter string="Active" name="filter_is_active"
                        domain="[('active','!=',False)]"/>
                <filter string="Inactive" name="filter_is_not_active"
                        domain="[('active','=',False)]"/>
                <separator/>
            </search>
        </field>
    </record>

